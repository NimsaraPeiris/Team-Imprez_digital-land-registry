# Example environment variables for Backend
# Copy to .env and fill with real values before running locally or tests

# Async SQLAlchemy database URL (default sqlite for this branch)
DATABASE_URL_ASYNC=sqlite+aiosqlite:///./db.sqlite3

# If set to 1/true, app startup will attempt to create enums/tables (for dev/testing)
AUTO_CREATE_DB=0

# JWT secret used by auth
JWT_SECRET=changeme

# MinIO settings (optional)
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=dlr-documents
MINIO_SECURE=false
